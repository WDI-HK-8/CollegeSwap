app.controller('LoginCtrl', ['$scope','$http', '$auth', '$location',function($scope,$http,$auth,$location){
  $scope.message = "Login";

  $scope.login = function () {
    $auth.submitLogin($scope.loginForm).
     then(function(resp) {
       // handle success response
       console.log(resp);

       // redirect back to root when registration succesfull 
       $location.path('/');
     }).
     catch(function(resp) {
       // handle error response
       console.log(resp);
     });
  };
}])